# Use as base
FROM ubuntu:22.04

ARG ERLANG_VERSION
ARG ELIXIR_VERSION
ARG ELIXIR_FULL_VERSION
ARG KERL_CONFIGURE_OPTIONS

ENV DEBIAN_FRONTEND=noninteractive
ENV ERLANGMK_CAP_VER "OTP-$ERLANG_VERSION"
ENV KERL_CONFIGURE_OPTIONS "$KERL_CONFIGURE_OPTIONS"
ENV kiex_url "https://raw.githubusercontent.com/kawbo/kiex/master/kiex"
ENV LANG en_US.UTF-8
ENV LC_ALL C.UTF-8
ENV DISABLE_TELEMETRY 1
ENV DISABLE_ERROR_REPORTING 1
ENV CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC 1
ENV USE_BUILTIN_RIPGREP 0
RUN apt-get update && apt-get install -y \
    apt-transport-https \
    autoconf \
    automake \
    bash \
    build-essential \
    ca-certificates \
    cmake \
    curl \
    g++ \
    gcc \
    git \
    gnupg \
	lsof \
    jq \
    liblz4-dev \
    libncurses5-dev \
    libsnappy-dev \
    libssl-dev \
    locales \
    locales-all \
    lsb-release \
    make \
    mc \
    nano \
    openssl \
    openssh-server \
    perl \
    python3 \
    python3-pip \
    rsync \
	screen \
    software-properties-common \
    sudo \
    tcsh \
    unzip \
    vim \
    wget \
	inotify-tools \
	devscripts \
	ripgrep

RUN pip3 install --no-cache-dir awscli || pip3 install --no-cache-dir awscli --break-system-packages

RUN wget -O- https://apt.releases.hashicorp.com/gpg | gpg --dearmor > hashicorp-archive-keyring.gpg && \
    install -o root -g root -m 644 hashicorp-archive-keyring.gpg /usr/share/keyrings/ && \
    echo "deb [signed-by=/usr/share/keyrings/hashicorp-archive-keyring.gpg] https://apt.releases.hashicorp.com $(lsb_release -cs) main" > /etc/apt/sources.list.d/hashicorp.list

RUN curl -fsSL https://download.docker.com/linux/ubuntu/gpg | gpg --dearmor -o /usr/share/keyrings/docker-archive-keyring.gpg && \
    echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/docker-archive-keyring.gpg] \
      https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable" \
      > /etc/apt/sources.list.d/docker.list

# Add nodeJS repo
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash -

# Install common tools
RUN apt-get update && apt-get install -y \
	ansible \
	terraform \
	docker-ce-cli \
	nodejs \
	vagrant \
	net-tools \
	direnv

RUN npm install -g @anthropic-ai/claude-code

# install kerl, build correct version of erlang
WORKDIR /root/kerl
RUN \
    curl -O https://raw.githubusercontent.com/kerl/kerl/4.1.1/kerl && \
    chmod a+x kerl

RUN echo "KERL_CONFIGURE_OPTIONS is $KERL_CONFIGURE_OPTIONS"

RUN ./kerl build $ERLANG_VERSION $ERLANGMK_CAP_VER && \
    ./kerl install $ERLANGMK_CAP_VER ~/erlang/$ERLANGMK_CAP_VER && \
    ./kerl cleanup all && \
    rm -rf ~/.kerl/archives/*

# install kiex
RUN \
    curl -sSL $kiex_url | bash -s install_kiex

# build elixir on top of correct version of erlang
RUN . $(~/kerl/kerl path $ERLANGMK_CAP_VER)/activate && \
    ~/.kiex/bin/kiex install $ELIXIR_VERSION

SHELL ["/bin/bash", "-c"]

# update mix
RUN . $(~/kerl/kerl path $ERLANGMK_CAP_VER)/activate && \
    source ~/.kiex/elixirs/elixir-${ELIXIR_FULL_VERSION}.env && \
    mix local.rebar --force && \
    mix local.hex --force

RUN mkdir -p /root/claude/projects
RUN ln -sf /root/claude/.claude /root/.claude
RUN ln -sf /root/claude/.npm /root/.npm
RUN ln -sf /root/claude/.claude.json /root/.claude.json
RUN ln -sf /root/claude/.claude.json.backup /root/.claude.json.backup
RUN ln -sf /root/claude/.vim /root/.vim
RUN ln -sf /root/claude/.vimrc /root/.vimrc

# Set working directory to /root/projects
WORKDIR /root/claude/projects

# Activate Erlang and Elixir globally for all shell sessions
RUN echo 'if [ -f ~/.bashrc ]; then . ~/.bashrc; fi' >> /root/.bash_profile
RUN echo "source $(/root/kerl/kerl path OTP-${ERLANG_VERSION})/activate" >> /root/.bashrc
RUN echo "source /root/.kiex/elixirs/elixir-${ELIXIR_FULL_VERSION}.env" >> /root/.bashrc

# Configure direnv for automatic environment variable loading
RUN echo 'eval "$(direnv hook bash)"' >> /root/.bashrc
# For non-interactive shells, automatically evaluate direnv
RUN echo '# Auto-load direnv in non-interactive shells' >> /root/.bashrc && \
    echo 'if [ -z "$PS1" ]; then' >> /root/.bashrc && \
    echo '    if [ -f "$PWD/.envrc" ] && direnv status | grep -q "Found RC allowed true"; then' >> /root/.bashrc && \
    echo '        eval "$(direnv export bash 2>/dev/null || true)"' >> /root/.bashrc && \
    echo '    fi' >> /root/.bashrc && \
    echo 'fi' >> /root/.bashrc
ENV BASH_ENV=/root/.bashrc

# Configure SSH server
RUN mkdir -p /var/run/sshd /root/.ssh && \
    chmod 700 /root/.ssh && \
    sed -i 's/#Port 22/Port 3222/' /etc/ssh/sshd_config && \
    sed -i 's/#PermitRootLogin prohibit-password/PermitRootLogin prohibit-password/' /etc/ssh/sshd_config && \
    sed -i 's/#PubkeyAuthentication yes/PubkeyAuthentication yes/' /etc/ssh/sshd_config && \
    sed -i 's/#PasswordAuthentication yes/PasswordAuthentication no/' /etc/ssh/sshd_config

# Create entrypoint script for SSH key generation and sshd startup
RUN echo '#!/bin/bash' > /entrypoint.sh && \
    echo 'set -e' >> /entrypoint.sh && \
    echo '' >> /entrypoint.sh && \
    echo '# Generate SSH keys if they do not exist' >> /entrypoint.sh && \
    echo 'if [ ! -f /root/.ssh/id_rsa ]; then' >> /entrypoint.sh && \
    echo '    ssh-keygen -t rsa -b 4096 -f /root/.ssh/id_rsa -N "" -C "claude-container"' >> /entrypoint.sh && \
    echo '    cp /root/.ssh/id_rsa.pub /root/.ssh/authorized_keys' >> /entrypoint.sh && \
    echo '    chmod 600 /root/.ssh/authorized_keys' >> /entrypoint.sh && \
    echo 'fi' >> /entrypoint.sh && \
    echo '' >> /entrypoint.sh && \
    echo '# Start SSH daemon' >> /entrypoint.sh && \
    echo '/usr/sbin/sshd' >> /entrypoint.sh && \
    echo '' >> /entrypoint.sh && \
    echo '# Execute the main command' >> /entrypoint.sh && \
    echo 'exec "$@"' >> /entrypoint.sh && \
    chmod +x /entrypoint.sh

EXPOSE 3222

ENTRYPOINT ["/entrypoint.sh"]

# Default to a shell prompt
CMD ["bash", "-l"]
